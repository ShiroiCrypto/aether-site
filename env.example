# =====================
# Configurações do Aether
# =====================

# Porta do servidor (padrão: 8080)
PORT=8080

# Ambiente (development/production)
NODE_ENV=production

# =====================
# Google AI (Gemini)
# =====================
# Obtenha em: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=sua_chave_gemini_aqui

# =====================
# Discord OAuth2
# =====================
# Obtenha em: https://discord.com/developers/applications
DISCORD_CLIENT_ID=seu_client_id_aqui
DISCORD_CLIENT_SECRET=seu_client_secret_aqui
DISCORD_REDIRECT_URI=https://aether.discloud.app/api/auth/discord/callback

# =====================
# MongoDB (Opcional)
# =====================
# Use MongoDB Atlas ou instalação local
# Para MongoDB Atlas, use a string de conexão completa
MONGODB_URI=mongodb+srv://usuario:senha@cluster.mongodb.net/aether?retryWrites=true&w=majority

# =====================
# Segurança
# =====================
# Senha secreta para sessões (mude para uma senha forte)
SESSION_SECRET=uma_senha_super_secreta_para_sessao

# =====================
# Configurações Avançadas
# =====================
# Timeout para requisições (em ms)
REQUEST_TIMEOUT=30000

# Limite de tamanho para uploads (em bytes)
MAX_FILE_SIZE=10485760

# =====================
# Logs
# =====================
# Nível de log (debug, info, warn, error)
LOG_LEVEL=info

# =====================
# Exemplo de configuração completa:
# =====================
# PORT=8080
# NODE_ENV=production
# GEMINI_API_KEY=AIzaSyC...
# DISCORD_CLIENT_ID=1234567890123456789
# DISCORD_CLIENT_SECRET=abcdefghijklmnopqrstuvwxyz
# DISCORD_REDIRECT_URI=https://aether.discloud.app/api/auth/discord/callback
# MONGODB_URI=mongodb+srv://usuario:senha@cluster.mongodb.net/aether?retryWrites=true&w=majority
# SESSION_SECRET=minha_senha_super_secreta_123
# REQUEST_TIMEOUT=30000
# MAX_FILE_SIZE=10485760
# LOG_LEVEL=info 